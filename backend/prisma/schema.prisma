generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  reminders Reminder[]
}

model Reminder {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  date        String
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime    @default(now())
  userId      Int
  geofencing  Geofencing?
  user        User        @relation(fields: [userId], references: [id])
}

model Geofencing {
  id         Int      @id @default(autoincrement())
  latitude   Float
  longitude  Float
  radius     Float
  reminderId Int      @unique
  reminder   Reminder @relation(fields: [reminderId], references: [id])
}
